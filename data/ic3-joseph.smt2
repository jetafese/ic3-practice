(declare-rel Invariant (Bool Bool))
(declare-rel Goal ())
(declare-var x Bool)
(declare-var y Bool)
(declare-var xp Bool)
(declare-var yp Bool)
(rule (=> (not (or x y)) (Invariant x y)))
(rule (=> (and (Invariant x y)
  (= (ite x y y) yp)
  (= (not x) xp)
  ) (Invariant xp yp)))
(rule (=> (and (Invariant x y) y) Goal))
(query Goal)
